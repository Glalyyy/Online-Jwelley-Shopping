@model Jewelly.Models.StoneMst
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h1 class="_goldh1">Edit StoneMst</h1>

<form action="/Admin/StoneMst/Edit/@Model.Stone_ID" method="post"><br />
    <input type="hidden" name="Stone_ID" value="@Model.Stone_ID" />
    <div class="row">
        <div class="col-md-6">
            <label for="StoneGm">Stone Gm</label>
            <input type="text"
                   class="form-control"
                   id="StoneGm"
                   name="Stone_Gm"
                   placeholder="StoneGm"
                   value="@Model.Stone_Gm" />
        </div>
        <div class="col-md-6">
            <label for="StonePcs">Stone Pcs</label>
            <input type="text"
                   class="form-control"
                   id="StonePcs"
                   name="Stone_Pcs"
                   placeholder="StonePcs"
                   value="@Model.Stone_Pcs" />
        </div>
        <div class="col-md-6">
            <label for="StoneCrt">Stone Crt</label>
            <input type="text"
                   class="form-control"
                   id="StoneCrt"
                   name="Stone_Crt"
                   placeholder="StoneCrt"
                   value="@Model.Stone_Crt" />
        </div>
        <div class="col-md-6">
            <label for="StoneRate">Stone Rate</label>
            <input type="text"
                   class="form-control"
                   id="StoneRate"
                   name="Stone_Rate"
                   placeholder="StoneRate"
                   value="@Model.Stone_Rate" />
        </div>
        <div class="col-md-6">
            <label for="StoneAmt">Stone Amt</label>
            <input type="text"
                   class="form-control"
                   id="StoneAmt"
                   name="Stone_Amt"
                   placeholder="StoneAmt"
                   value="@Model.Stone_Amt" />
        </div>
        <div class="col-md-6">
            <label for="StyleCode">Style Code</label>
            <input type="text"
                   class="form-control"
                   id="StyleCode"
                   name="Style_Code"
                   placeholder="StyleCode"
                   value="@Model.Style_Code" />
        </div>
        <div class="col-md-6">
            <label for="StoneQltyID">StoneQlty ID</label>
            <input type="text"
                   class="form-control"
                   id="StoneQltyID"
                   name="StoneQlty_ID"
                   placeholder="StoneQltyID"
                   value="@Model.StoneQlty_ID" />
        </div>
      
    </div>
    <br />
    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("StoneMst","StoneMst")" class="btn btn-danger">Cancel</a>
</form>


