 @model List<Jewelly.Models.ProdMst>
@{
    ViewBag.Title = "Prod";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div>
    <div class="container">
        <h1 class="_goldh1">Welcom to ProductMst</h1>
        
    </div>
    <div>
        @if (ViewBag.SuccessMg != null)
        {
            <div id="msgAlert" style="margin-left: 3em;" class="alert alert-success">
                @ViewBag.SuccessMg
            </div>
        }
        else if (ViewBag.ErrorMg != null)
        {
            <div id="msgsAlert" style="margin-left: 3em;" class="alert alert-danger">
                @ViewBag.ErrorMg
            </div>
        }
    </div>
    <div>
        <table>
            <tr class="d-flex flex-row align-items-center flex-wrap" action="/Admin/ProdMst/Prod">
                <td colspan="2">
                    <a href="/Admin/ProdMst/Create" class="mx-3 btn btn-warning text-center">+ Add Pro</a>
                </td>
                <td>
                    <input type="search"
                           class="form-control mx-6"
                           id="search"
                           name="search"
                           placeholder="search" />
                </td>
                <td>
                    <button type="submit" class="btn btn-primary mx-3">Go</button>
                </td>
            </tr>
            <br />
        </table>
        <br />
        <table class="table _gold">
            <thead>
                <tr>
                    <td>Stone ID</td>
                    <td>Enter Weight Of Each Stone</td>
                    <td>Edit</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Prod_ID </td>
                        <td>@item.Prod_Type</td>
                        <td colspan="1">
                            <a href="/Admin/ProdMst/Edit/@item.Prod_ID" class="btn btn-success text-center">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
        $('#msgsAlert').fadeOut('slow');
    }, 2000);
    console.log()</script>



